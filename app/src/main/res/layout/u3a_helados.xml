<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ut03.u3aHelados">

    <TextView
        android:id="@+id/u3aHeladosTvVainilla"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:text="Vainilla"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <TextView
        android:id="@+id/u3aHeladosTvFresa"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:text="Fresa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/u3aHeladosTvVainilla"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/u3aHeladosTvChoco"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:text="Chocolate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/u3aHeladosTvFresa"
        app:layout_constraintVertical_bias="0.048" />

    <EditText
        android:id="@+id/u3aHeladosEtVainilla"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toEndOf="@+id/u3aHeladosTvVainilla"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <EditText
        android:id="@+id/u3aHeladosEtFresa"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/u3aHeladosTvFresa"
        app:layout_constraintTop_toBottomOf="@+id/u3aHeladosEtVainilla"
        app:layout_constraintVertical_bias="0.048" />

    <EditText
        android:id="@+id/u3aHeladosEtChoco"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/u3aHeladosTvChoco"
        app:layout_constraintTop_toBottomOf="@+id/u3aHeladosEtFresa"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/u3aHeladosTvTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/u3aHeladosTvChoco"
        app:layout_constraintVertical_bias="0.249" />

    <Spinner
        android:id="@+id/u3aHeladosSpnTipo"
        android:layout_width="251dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/u3aHeladosTvTipo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/u3aHeladosTvTipo"
        app:layout_constraintTop_toTopOf="@+id/u3aHeladosTvTipo"
        android:prompt="@array/tipoHelado"/>

    <Button
        android:id="@+id/u3aHeladosBtGenerar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENERAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/u3aHeladosTvTipo" />
</androidx.constraintlayout.widget.ConstraintLayout>