<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".examen1.ex1.examenVentaTicket">

    <Spinner
        android:id="@+id/ex1spOrigen"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138" />

    <Spinner
        android:id="@+id/ex1spDestino"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ex1spOrigen"
        app:layout_constraintVertical_bias="0.111" />

    <Button
        android:id="@+id/ex1btReservar"
        android:layout_width="235dp"
        android:layout_height="58dp"
        android:text="Reservar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ex1cbIda"
        app:layout_constraintVertical_bias="0.723" />

    <Button
        android:id="@+id/ex1btFechaIda"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/white"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ex1spDestino"
        app:layout_constraintVertical_bias="0.089" />

    <TextView
        android:id="@+id/ex1tvFechaIda"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:text="Ida:"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ex1btFechaIda"
        app:layout_constraintEnd_toEndOf="@+id/ex1btFechaIda"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/ex1btFechaIda"
        app:layout_constraintTop_toTopOf="@+id/ex1btFechaIda"
        app:layout_constraintVertical_bias="0.68" />

    <Button
        android:id="@+id/ex1btFechaVuelta"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/white"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ex1btFechaIda"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/ex1tvFechaVuelta"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:text="Vuelta:"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ex1btFechaVuelta"
        app:layout_constraintEnd_toEndOf="@+id/ex1btFechaVuelta"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/ex1btFechaVuelta"
        app:layout_constraintTop_toTopOf="@+id/ex1btFechaVuelta"
        app:layout_constraintVertical_bias="0.48" />

    <CheckBox
        android:id="@+id/ex1cbIda"
        android:layout_width="151dp"
        android:layout_height="45dp"
        android:text="Solo Ida"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ex1tvFechaVuelta"
        app:layout_constraintVertical_bias="0.131" />

    <TextView
        android:id="@+id/ex1tvError"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:textAlignment="center"
        android:textColor="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ex1cbIda"
        app:layout_constraintVertical_bias="0.335" />

</androidx.constraintlayout.widget.ConstraintLayout>